{
  "layer": "top",
  "height": 30,
  "spacing": 4,
  "modules-left": [
    "wlr/workspaces"
    // "hyprland/submap",
    // "clock",
  ],
  "modules-center": ["custom/screenshot", "custom/window", "custom/picker"],
  "modules-right": [
    // "idle_inhibitor",
    // "cpu",
    // "temperature",
    "tray",
    "network",
    "memory",
    "pulseaudio",
    "clock",
    "custom/power"
  ],
  "wlr/workspaces": {
    "on-click": "activate",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1"
  },
  "keyboard-state": {
    "capslock": true,
    "format": "{name}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞"
    }
  },
  "tray": {
    "icon-size": 20,
    "spacing": 10
  },
  "clock": {
    "format": "{:%I:%M %p}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "tooltip": false,
    "on-click": "~/.local/bin/calendar.sh --toggle"
  },
  "cpu": {
    "format": "{usage}% Ôãõ",
    "tooltip": false
  },
  "memory": {
    "format": "{:03} Óâ¶"
  },
  "temperature": {
    "critical-threshold": 80,
    "format": "{temperatureC}¬∞C {icon}",
    "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
  },
  "network": {
    "format": "ÔÅ± ",
    "format-wifi": "Ôá´ ",
    "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
    "tooltip-format": "{essid} {signalStrength}%",
    // "format-linked": "{ifname} (No IP) Ôûñ",
    "format-disconnected": "ÔÅ± ",
    "on-click": "sleep 0.1 && ~/.local/bin/wifi_menu.sh"
  },
  "pulseaudio": {
    "format": "{volume:03} {icon}  {format_source}",
    "format-bluetooth": "{volume} {icon}Ôäî {format_source}",
    "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
    "format-muted": "Ôö© {format_source}",
    "format-source": "{volume:03} ÔÑ∞",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    },
    "on-click-right": "pavucontrol",
    "on-click": "~/.local/bin/audio.sh --toggle",
    "tooltip": false
  },
  "custom/media": {
    "format": "{icon} {}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ÔÜº",
      "default": "üéú"
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null"
  },
  "custom/window": {
    "exec": "~/.local/bin/active_window_title.sh",
    "tooltip": false,
    "interval": 1
  },
  "custom/cava-internal": {
    "exec": "~/.config/waybar/cava.sh",
    "tooltip": false
  },
  "custom/power": {
    "format": "{icon}",
    "format-icons": {
      "default": "Û∞çÉ"
    },
    "escape": true,
    "interval": "once",
    "on-click": "sleep 0.1 && ~/.local/bin/power_menu.sh"
  },
  "custom/screenshot": {
    "format": "{icon}",
    "format-icons": {
      "default": "ÔÄ∞ "
    },
    "escape": true,
    "on-click": "sleep 0.1 && ~/.local/bin/screenshot_menu.sh"
  },
  "custom/picker": {
    "format": "{icon}",
    "format-icons": {
      "default": "Óâµ"
    },
    "escape": true,
    "on-click": "sleep 0.1 && ~/.local/bin/color_picker.sh --hex",
    "on-click-right": "sleep 0.1 && ~/.local/bin/color_picker.sh --rgb"
  }
}
